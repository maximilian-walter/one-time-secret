{
    "name": "maximilian-walter/one-time-secret",
    "description": "Web app to securely share secrets",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1",
        "league/flysystem": "^3.15",
        "symfony/console": "^6.3",
        "symfony/dotenv": "^6.3",
        "symfony/flex": "^2.3",
        "symfony/framework-bundle": "^6.3",
        "symfony/lock": "^6.3",
        "symfony/monolog-bundle": "^3.8",
        "symfony/rate-limiter": "^6.3",
        "symfony/runtime": "^6.3",
        "symfony/security-csrf": "^6.3",
        "symfony/translation": "^6.3",
        "symfony/twig-bridge": "^6.3",
        "symfony/twig-bundle": "^6.3",
        "symfony/validator": "^6.3",
        "symfony/webpack-encore-bundle": "^2.0",
        "symfony/yaml": "^6.3",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "symfony/debug-bundle": "^6.3",
        "symfony/stopwatch": "^6.3",
        "symfony/web-profiler-bundle": "^6.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "app:codestyle-check": "php-cs-fixer fix --dry-run --show-progress=none",
        "app:codestyle-fix": "php-cs-fixer fix --show-progress=none",
        "app:lint": [
            "@composer validate --strict",
            "bin/console lint:container",
            "bin/console lint:yaml config --parse-tags",
            "bin/console lint:twig templates"
        ],
        "app:update-translations": [
            "bin/console translation:extract --dump-messages --domain=messages en --force",
            "bin/console translation:extract --dump-messages --domain=messages de --force"
        ],
        "app:server": [
            "@php -S 127.0.0.1:8080 -t public public/router.php"
        ]
    }
}
