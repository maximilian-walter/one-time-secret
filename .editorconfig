root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.php]
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

[*.twig]
indent_size = 2

[*.js]
indent_size = 2

[*.scss]
indent_size = 2

[*.css]
indent_size = 2

[*.xlf]
indent_size = 2
